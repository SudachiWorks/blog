<div class="container">
  <h1 class="mt-4">投稿</h1>
  <div class="d-flex">
    <%= link_to "新しい投稿", new_admin_post_path, class: "btn btn-primary" %>
  </div>
  <div class="card mt-4">
    <ul class="list-group">
      <% @posts.each do |post| %>
        <li class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= post.title %></h5>
            <small><%= post.posted_at %></small>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
